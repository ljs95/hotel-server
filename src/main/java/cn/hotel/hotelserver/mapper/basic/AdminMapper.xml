<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.hotel.hotelserver.mapper.basic.AdminMapper">
    <resultMap id="BaseResultMap" type="cn.hotel.hotelserver.model.basic.Admin">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="enabled" property="enabled" jdbcType="BIT"/>
        <result column="user_img" property="userImg" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, username, password, nickname, enabled, user_img
    </sql>

    <insert id="insert" parameterType="cn.hotel.hotelserver.model.basic.Admin">
        insert into admin (username, password,
          nickname, enabled)
        values (#{username,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR},
          #{nickname,jdbcType=VARCHAR}, #{enabled,jdbcType=BIT})
    </insert>
    <select id="loadUserByUsername" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from admin where username = #{username}
    </select>

    <resultMap id="RolesResutMap" type="cn.hotel.hotelserver.model.basic.Role">

    </resultMap>
</mapper>